<div class="card p-4">
    <h2 class="card-title">{{title}}</h2>
    <p class="card-text">{{content}}</p>
    <p>Posted by {{user.username}} on {{format_date date_created}}</p>
    {{#if logged_in}}
    <p>
        <a href="/edit/{{id}}" class="btn btn-primary">Edit</a>
        <button class="btn btn-danger" data-id="{{id}}">Delete</button>
    </p>
    {{/if}}
</div>