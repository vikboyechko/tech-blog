{{!-- Homepage blog posts as individual cards --}}

<!-- Loop over each post in posts -->
{{#each posts as |post| }}
<div class="row mb-4 mx-2">
    <div class="col-12 card border-secondary p-4">
        <h2 class="card-title">
            <a href="/posts/{{post.id}}" class="link-dark">{{post.title}}</a>
        </h2>
        <p>Posted by {{user.username}} on {{format_date post.date_created}}</p>
        <p class="card-text">{{post.content}}</p>
    </div>
</div>
{{/each}}