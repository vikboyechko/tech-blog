<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4">
    <div class="col-12 col-md-9 card border-secondary p-4">
        <h2 class="card-title">
            <a href="/posts/{{post.id}}">{{post.title}}</a>
        </h2>
        <p>Posted by {{user.username}} on {{format_date post.date_created}}</p>
        <p class="card-text">{{post.content}}</p>
    </div>
    
</div>
{{/each}}